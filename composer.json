{
    "name": "rkit/tags-behavior-yii2",
    "description": "Tags Behavior for Yii2",
    "keywords": ["yii2", "extension", "tags", "behavior"],
    "homepage": "https://github.com/rkit/tags-behavior-yii2",
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Romanov",
            "email": "rkit.ru@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/rkit/tags-behavior-yii2/issues",
        "source": "https://github.com/rkit/tags-behavior-yii2"
    },
    "require": {
        "yiisoft/yii2": "^2.0.0"
    },
    "scripts": {
        "test:build": [
            "php tests/yii migrate --migrationPath=@tests/migrations/ --interactive=0"
        ],
        "test": "phpunit --colors=always --testdox"
    },
    "autoload": {
        "psr-4": {
            "rkit\\tags\\behavior\\": "src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^7.2",
        "phpunit/dbunit": "^4.0"
    }
}
